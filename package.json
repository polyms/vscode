{
  "name": "vscode",
  "displayName": "Polyms",
  "description": "An arctic, north-bluish clean and elegant Visual Studio Code theme.",
  "version": "0.0.3",
  "publisher": "polyms",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Themes",
    "Other"
  ],
  "keywords": [
    "icon-theme",
    "theme",
    "polyms"
  ],
  "homepage": "https://github.com/polyms/vscode",
  "icon": "assets/favicon.png",
  "activationEvents": [],
  "contributes": {
    "themes": [
      {
        "label": "Polyms",
        "uiTheme": "vs-dark",
        "path": "./themes/polyms-color-theme.json"
      }
    ],
    "iconThemes": [
      {
        "id": "polyms-vs",
        "label": "Polyms",
        "path": "./themes/polyms-icons.json"
      }
    ],
    "commands": [
      {
        "command": "polyms.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "main": "./dist/extension.js",
  "scripts": {
    "build": "node esbuild.js",
    "package": "pnpm build && vsce package",
    "publish": "vsce publish",
    "lint": "biome check .",
    "format": "biome format . --write",
    "watch": "node esbuild.js --watch",
    "release": "release-it patch"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.3",
    "@types/node": "^24.10.0",
    "@types/vscode": "^1.105.0",
    "@vscode/vsce": "^3.6.2",
    "esbuild": "^0.25.12",
    "release-it": "^19.0.6",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/polyms/vscode.git"
  }
}
